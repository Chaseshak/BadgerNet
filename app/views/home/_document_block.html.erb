<div class="info-block-wrapper">
    <div class="info-block">
    <h2>Recent Documents</h2>
        <table>
            <tbody>
                <% @documents.each do |document| %>
                <tr>
                    <td><%= document.name %></td>
                    <td><%= document.created_at.strftime("%d %b. %Y") %></td>
                    <td><%= link_to "Download Document", document.attachment_url, class: 'button-primary', style: 'color: white;' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
